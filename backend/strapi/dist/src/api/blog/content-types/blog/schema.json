{
    "kind": "collectionType",
    "collectionName": "blogs",
    "info": {
        "singularName": "blog",
        "pluralName": "blogs",
        "displayName": "blog"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string"
        },
        "description": {
            "type": "text"
        },
        "image": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images",
                "files",
                "videos",
                "audios"
            ]
        },
        "slug": {
            "type": "uid"
        },
        "date": {
            "type": "date"
        },
        "author": {
            "type": "string"
        },
        "content": {
            "type": "blocks"
        },
        "timeToRead": {
            "type": "string"
        },
        "comments": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::comment.comment",
            "mappedBy": "blogId"
        }
    }
}
